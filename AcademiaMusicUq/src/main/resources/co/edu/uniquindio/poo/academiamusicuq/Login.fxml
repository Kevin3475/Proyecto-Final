<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" minHeight="450.0" minWidth="350.0"
            styleClass="login-background"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.academiamusicuq.viewController.LoginViewController">

    <children>
        <!-- Contenedor principal centrado -->
        <VBox alignment="CENTER"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0"
              styleClass="login-container">

            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <children>
                <!-- Logo y T칤tulo -->
                <VBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
                    <children>
                        <Label text="游꿧" style="-fx-font-size: 48; -fx-padding: 0 0 10 0;"/>
                        <Label text="Academia de M칰sica UQ" styleClass="login-title">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Subt칤tulo -->
                <Label text="Iniciar Sesi칩n" styleClass="login-subtitle">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="25.0" bottom="5.0" />
                    </VBox.margin>
                </Label>

                <!-- Campos de formulario -->
                <VBox spacing="15.0" VBox.vgrow="NEVER">
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                    <children>
                        <TextField fx:id="txtUsuario" promptText="Usuario" styleClass="login-field">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </TextField>

                        <PasswordField fx:id="txtPassword" promptText="Contrase침a" styleClass="login-field">
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </PasswordField>
                    </children>
                </VBox>

                <!-- Botones -->
                <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets top="25.0" />
                    </VBox.margin>
                    <children>
                        <Button mnemonicParsing="false" onAction="#onLogin"
                                text="游꿧 Ingresar"
                                styleClass="login-button"
                                prefWidth="120.0"
                                prefHeight="35.0"/>
                        <Button mnemonicParsing="false" onAction="#onLimpiar"
                                text="Limpiar"
                                styleClass="secondary-button"
                                prefWidth="100.0"
                                prefHeight="35.0"/>
                    </children>
                </HBox>

                <!-- Informaci칩n de credenciales -->
                <VBox alignment="CENTER" spacing="5.0" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                    <children>
                        <Label text="Credenciales de Demo:" styleClass="login-hint-title"/>
                        <Label text="Usuario: admin" styleClass="login-hint"/>
                        <Label text="Contrase침a: admin123" styleClass="login-hint"/>
                    </children>
                </VBox>

                <!-- Footer -->
                <Label text="Sistema de Gesti칩n Acad칠mica" styleClass="login-footer">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>