<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="350.0" minHeight="350.0" minWidth="300.0"
            styleClass="login-background"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.academiamusicuq.viewController.LoginViewController">

    <children>
        <!-- Contenedor principal centrado ultra compacto -->
        <VBox alignment="CENTER"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0"
              styleClass="login-container">

            <padding>
                <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
            </padding>

            <children>
                <!-- Logo y T칤tulo compacto -->
                <VBox alignment="CENTER" spacing="6.0" VBox.vgrow="NEVER">
                    <children>
                        <Label text="游꿧" style="-fx-font-size: 36; -fx-padding: 0 0 6 0;"/>
                        <Label text="Academia de M칰sica UQ" styleClass="login-title">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
