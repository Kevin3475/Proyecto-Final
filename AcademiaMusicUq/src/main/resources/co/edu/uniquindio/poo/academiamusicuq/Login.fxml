                        <Insets top="15.0" bottom="3.0" />
                    </VBox.margin>
                </Label>

                <!-- Campos de formulario ultra compactos -->
                <VBox spacing="8.0" VBox.vgrow="NEVER">
                    <padding>
                        <Insets top="6.0" />
                    </padding>
                    <children>
                        <TextField fx:id="txtUsuario" promptText="Usuario" styleClass="login-field" prefHeight="28.0">
                            <VBox.margin>
                                <Insets bottom="3.0" />
                            </VBox.margin>
                        </TextField>

                        <PasswordField fx:id="txtPassword" promptText="Contrase침a" styleClass="login-field" prefHeight="28.0">
                            <VBox.margin>
                                <Insets top="3.0" />
                            </VBox.margin>
                        </PasswordField>
                    </children>
                </VBox>

                <!-- Botones compactos -->
                <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                    <children>
                        <Button mnemonicParsing="false" onAction="#onLogin"
                                text="游꿧 Ingresar"
                                styleClass="login-button"
                                prefWidth="90.0"
                                prefHeight="28.0"/>
                        <Button mnemonicParsing="false" onAction="#onLimpiar"
                                text="Limpiar"
                                styleClass="secondary-button"
